<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/colorLightBlueBackground"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quiz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/cerebri_sans_bold"
            android:gravity="center"
            android:text="Quiz 1"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/questions_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/cerebri_sans_regular"
            android:gravity="center"
            android:text="4 questions"
            android:textColor="#8E8A8A"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/date_and_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.2"
        android:fontFamily="@font/cerebri_sans_regular"
        android:gravity="center"
        android:text="Aug 10th, 13:20"
        android:textColor="#8E8A8A"
        android:textSize="14sp" />

</androidx.appcompat.widget.LinearLayoutCompat>