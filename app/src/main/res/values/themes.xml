<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.QuizzieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorBlue</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.QuizzieApp.ActionBarTitleAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_subtitle_style" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sign_in_buttos_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/signin_button</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingStart">75dp</item>
        <item name="android:paddingEnd">75dp</item>
    </style>

    <style name="sign_in_buttos_style_google">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginTop">84dp</item>
        <item name="android:layout_marginBottom">26dp</item>
        <item name="android:background">@drawable/signin_button</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>